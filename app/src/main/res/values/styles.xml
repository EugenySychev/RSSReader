<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="newsListTitleText" parent="Widget.AppCompat.ListView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/newsListTitleSize</item>
    </style>
    <style name="newsListDescriptionText" parent="Widget.AppCompat.ListView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/newsListDescriptionSize</item>
    </style>
    <style name="newsListTimeText" parent="Widget.AppCompat.ListView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/newsListTimeSize</item>
    </style>

    <style name="newsListView" parent="android:style/Widget.ListView">
        <item name="background">@color/colorBackground</item>
    </style>
</resources>
