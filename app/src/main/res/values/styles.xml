<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorBackground</item>

    </style>

    <style name="newsDigestText">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="newsListTitleText" parent="Widget.AppCompat.ListView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/newsListTitleSize</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
    </style>

    <style name="newsListUnreadCounter" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/newsListTitleSize</item>
    </style>

    <style name="newsListDescriptionText" parent="Widget.AppCompat.ListView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/newsListDescriptionSize</item>
    </style>

    <style name="newsListTimeText" parent="Widget.AppCompat.ListView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/newsListTimeSize</item>
    </style>

    <style name="navigationView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorText</item>
        <!--        <item name="colorAccent">@color/colorText</item>-->
        <!--        <item name="android:background">@color/colorBackground</item>-->
    </style>

</resources>
